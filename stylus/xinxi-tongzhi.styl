body
	font-family Microsoft YaHei
	transition all 1s
	background #EFEFF4
	margin 0
	padding 0
.top
	color #ED6E2A
	text-align center
	font-size 20px
	height 45px
	width 100%
	position fixed
	left 50%
	margin-left -50%
	z-index 2
	background white
	overflow hidden
	top 0
	.news-top
		width 250px
		height 30px
		background white
		margin 5px auto
		border 2px solid #EC6117
		display flex
		border-radius 5px
		line-height 30px
		font-size 14px
		div
			flex 1
			color #F4A378
			border-right 1px solid #EC6117
			font-size 14px
			&:nth-child(2)
				background #EA5404
				color white
			&:last-child
				border-right none
				line-height 26px
				.lifang
					font-size 18px
.news-contain
	margin auto
	padding 0px 10px
	margin 60px 0px
	.news-contain-content
		margin 10px
		background white
		height 130px
		border-radius 5px
		box-shadow 0px 0px 5px #888888
		.news-content-top
			display flex
			line-height 45px
			height 45px
			border-bottom 1px dotted #E4E4E4
			.news-content-top-left
				flex 1
				div
					margin-left 10px
					font-size 14px
			.news-content-top-right
				position relative
				.news-last-prayer
					color #B5B5B5
					font-size 12px
					position absolute
					right 15px
					margin-bottom -5px
		.news-content-bottom
			.news-bottom-prayer
				font-size 12px
				color #989898
				margin 0px 10px
				height 60px
			.news-bottom-last
				text-align center
				position relative
				.news-last-prayer
					color #898989
					font-size 12px
					position absolute
					left 15px
					bottom 50%
					margin-bottom -5px
.page-last
	height 50px
	background white
	position fixed
	bottom 0
	width 100%
	ul
		list-style none
		display flex
		width 95%
		padding 0
		margin 0 auto
		li
			flex 1
			text-align center
			margin-top 5px
			.page-last-img1
				width 100%
				height 21px
				background url(../img/house/i/bottom_nor_icon04@2x.png) center no-repeat
				display block
				background-size 21px 21px
			.page-last-img2
				width 100%
				height 21px
				background url(../img/house/i/bottom_nor_icon03@2x.png) center no-repeat
				display block
				background-size 21px 21px
			.page-last-img3
				width 45px
				height 40px
				position relative
				left 50%
				margin-left -22px
				background #EA5404 url(../img/house/i/bottom_icon05@2x.png) center right 0px no-repeat
				display block
				background-size 100% 100%
			.page-last-img4
				width 100%
				height 21px
				background url(../img/house/i/bottom_press_icon02@2x.png) center no-repeat
				display block
				background-size 21px 21px
				position relative
				.page-last-img4-box
					border-radius 50%
					width 15px
					height 15px
					font-size 12px
					text-align center
					background #EA5404
					position absolute
					top -5px
					left 50%
					color white
			.page-last-img5
				width 100%
				height 21px
				background url(../img/house/i/bottom_nor_icon01@2x.png) center no-repeat
				display block
				background-size 21px 21px
				position relative
			.page-last-text
				font-size 14px