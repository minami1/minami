@import './head.css'
.top
	color black
.appointment-contain
	overflow hidden
	margin-bottom 60px
	.appointment-contain-box
		background white
		width 100%
		height 120px
		margin-top 10px
		transition 0.6s
		position relative
		.appointment-box-top
			.appointment-box-center
				display flex
				padding 10px 5px 5px 5px
			.appointment-box-top-left
				flex 1
				position relative
				img
					width 100px
					height 70px
					position absolute
					top 50%
					margin-top -35px
					left 50%
					margin-left -50px
			.appointment-box-top-right
				flex 2
				color #868686
				font-size 14px
				padding-left 5px
				.appointment-box-top-right-top
					color #7E7E7E
					.appointment-time
						font-size 12px
						color #D5D5D5
						float right
						&:before
							content ''
							background url(../img/house/i/content_icon@2x.png) center no-repeat
							width 10px
							height 10px
							margin-right 5px
							background-size 100%
							display inline-block
				p
					color #7C7C7C
					span
						font-size 16px
						color #646464
				.appointment-box-top-right-bottom
					color #FF9830
					font-size 12px
		.appointment-box-bottom
			text-align center
			width 55px
			font-size 14px
			padding 2px 0px
			background #EA5404
			color white
			float right
			margin-right 10px
			border-radius 5px
		.appointment-remove
			position absolute
			top 0px
			right -65px
			width 65px
			height 120px
			background #FF3B30
			text-align center
			line-height 120px
			transition 0.6s
.page-last
	height 50px
	background white
	position fixed
	bottom 0
	width 100%
	ul
		list-style none
		display flex
		width 95%
		margin 0 auto
		li
			flex 1
			text-align center
			margin-top 5px
			.page-last-img2
				width 100%
				height 21px
				background url(../img/house/i/bottom_press_icon03@2x.png) center no-repeat
				display block
				background-size 21px 21px
			.page-last-img5
							width 100%
							height 21px
							background url(../img/house/i/bottom_nor_icon01@2x.png) center no-repeat
							display block
							background-size 21px 21px
							position relative