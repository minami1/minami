body
	font-family Microsoft YaHei
	transition all 1s
	background #EFEFF4
	margin 0
	padding 0
.top
	color #ED6E2A
	text-align center
	font-size 20px
	height 45px
	width 100%
	position fixed
	left 50%
	margin-left -50%
	z-index 2
	background white
	overflow hidden
	top 0
	.news-top
		width 250px
		height 30px
		background white
		margin 5px auto
		border 2px solid #EC6117
		display flex
		border-radius 5px
		line-height 30px
		div
			flex 1
			color #F4A378
			border-right 1px solid #EC6117
			font-size 14px
			&:last-child
				border-right none
				background #EA5404
				color white
.news-contain
	margin auto
	padding 0px 10px
	margin 60px 0px
	.news-contain-content
		margin 15px
		background white
		height 170px
		border-radius 5px
		box-shadow 1px 1px 10px #888888
		.news-content-top
			display flex
			line-height 45px
			height 45px
			border-bottom 1px dotted #E4E4E4
			.news-content-top-left
				flex 1
				div
					float left
					font-weight bold
					margin-left 20px
			.news-content-top-right
				margin 10px 10px
				width 75px
				font-size 14px
				height 25px
				color white
				text-align center
				background #15B755
				border-radius 5px
				line-height 25px
			.jjr
				background #0193E6
			.zs
				background #97B715
			.dls
				background #EA5404
		.news-content-bottom
			.news-bottom-prayer
				font-size 14px
				color #494949
				margin 10px 15px
				height 60px
			.news-bottom-last
				text-align center
				position relative
				.news-last-btn
					width 115px
					height 30px
					background #EFEFF4
					font-size 16px
					color #838384
					border none
					border-radius 5px
				.news-last-prayer
					color #B5B5B5
					font-size 10px
					position absolute
					right 15px
					left 72%
					bottom 50%
					margin-bottom -10px
.page-last
	height 50px
	background white
	position fixed
	bottom 0
	width 100%
	ul
		list-style none
		display flex
		width 95%
		margin 0 auto
		padding 0
		li
			flex 1
			text-align center
			margin-top 5px
			.page-last-img1
				width 100%
				height 21px
				background url(../img/house/i/bottom_nor_icon04@2x.png) center no-repeat
				display block
				background-size 21px 21px
			.page-last-img2
				width 100%
				height 21px
				background url(../img/house/i/bottom_nor_icon03@2x.png) center no-repeat
				display block
				background-size 21px 21px
			.page-last-img3
				width 45px
				height 40px
				position relative
				left 50%
				margin-left -22px
				background #EA5404 url(../img/house/i/bottom_icon05@2x.png) center right 0px no-repeat
				display block
				background-size 100% 100%
			.page-last-img4
				width 100%
				height 21px
				background url(../img/house/i/bottom_press_icon02@2x.png) center no-repeat
				display block
				background-size 21px 21px
			.page-last-img5
				width 100%
				height 21px
				background url(../img/house/i/bottom_nor_icon01@2x.png) center no-repeat
				display block
				background-size 21px 21px
